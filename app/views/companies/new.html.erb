<%= form_for @company, url: {action: 'create'} do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name, size: "40x2" %>
  </p>
  <p>
    <%= f.label :location %><br>
    <%= f.text_area :location, size: "40x2" %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', '/companies' %>
